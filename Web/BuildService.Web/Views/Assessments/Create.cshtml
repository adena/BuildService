@using BuildService.Web.ViewModels.ConstructionWorks
@model BuildService.Web.ViewModels.Assessments.AssessmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Assessment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Номер</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitedOn" class="control-label">Дата</label>
                <input type="date" asp-for="VisitedOn" class="form-control" />
                <span asp-validation-for="VisitedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteAdress" class="control-label">Адрес</label>
                <input asp-for="SiteAdress" class="form-control" />
                <span asp-validation-for="SiteAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotentialClient.FirstName" class="control-label">Име</label>
                <input asp-for="PotentialClient.FirstName" class="form-control" />
                <span asp-validation-for="PotentialClient.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotentialClient.LastName" class="control-label">Фамилия</label>
                <input asp-for="PotentialClient.LastName" class="form-control" />
                <span asp-validation-for="PotentialClient.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotentialClient.Email" class="control-label">Имейл</label>
                <input asp-for="PotentialClient.Email" class="form-control" />
                <span asp-validation-for="PotentialClient.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotentialClient.Phone" class="control-label">Телефон</label>
                <input asp-for="PotentialClient.Phone" class="form-control" />
                <span asp-validation-for="PotentialClient.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">Относно</label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Назад</a>
</div>

